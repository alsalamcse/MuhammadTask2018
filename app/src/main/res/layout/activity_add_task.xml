<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTaskActivity"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textinputlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInputLayout"
        android:layout_marginEnd="13dp"
        android:layout_toStartOf="@+id/ibtnMap">

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/etTaskText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="text" />
    </android.support.design.widget.TextInputLayout>

    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textinputlayout1"
            android:layout_alignParentStart="true"
            android:id="@+id/spnrPriority" />

    <TextView
        android:id="@+id/tvImportant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Important" />

    <SeekBar
        android:id="@+id/skbrImportant"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="3" />

    <TextView
        android:id="@+id/tvNeccesary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Neccesary" />

    <SeekBar
        android:id="@+id/skbrNeccesary"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="3" />

    <Button
            android:text="save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spnrMember"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnSaveTask" />
</LinearLayout>